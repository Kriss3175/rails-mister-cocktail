<div class="container">
  <div class="row">
    <div class="col">
      <h1>All cocktails</h1>

      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= cocktail.name %></li>
        <% end %>
        <%= link_to "Create a new cocktail", new_cocktail_path(@cocktail), class: "btn btn-warning" %>

      </ul>
    </div>
  </div>
</div>
