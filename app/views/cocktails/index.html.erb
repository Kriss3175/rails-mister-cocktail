<body>
<div class="navbar navbar-expand-sm navbar-light navbar-factory">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dzao5ujoq/image/upload/v1601458858/T.C.F_wtiuaf.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Your Cocktails", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Ingredients", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://res.cloudinary.com/dzao5ujoq/image/upload/v1598531621/avatar/gabriel-silverio-u3WmDyKGsrY-unsplash_indtbr.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: url('https://res.cloudinary.com/dzao5ujoq/image/upload/v1601451152/The_cocktail_Factory_a932s8.png')">
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="block">
        <div class="container">
        <h1>All cocktails</h1>
        <div class="et_pb_post">
          <ul>
            <% @cocktails.each do |cocktail| %>
              <li><i class="fas fa-cocktail"> - <%= link_to cocktail.name, cocktail_path(cocktail) %></li></i>
            <% end %>
          </ul>
          <div><button class="btn_cta_first"><%= link_to "Create your cocktail", new_cocktail_path %></button></div>
        </div>
          </div>
      </div>
    </div>
  </div>
</div>
<div>
  <div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Made with <i class="fas fa-heart" id="heart"></i>
  </div>
</div>
</div>
</body>





